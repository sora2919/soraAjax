</div>


@section Scripts{

    <script>
        const cities = ["台北市", "新北市", "桃園市", "台中市", "台南市", "高雄市"]
        const citySelect = document.querySelector('#CitySelect')
        const displaySpan = document.querySelector('#display')

//載入時讀取城市資料
        function loadCity(){
            const datas = cities.map(city => `<option value='${city}'>${city}</option>`)
            citySelect.innerHTML = datas.join("");
        }


//點選城市後將資料載入SPAN

        citySelect.addEventListener('change', () => {
            displaySpan.textContent = `${citySelect.value}`
        })

        function show() {
            theDiv.textContent = `${citySelect.value}`;
        }

     loadCity();

    </script>
}

